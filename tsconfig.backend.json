{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/server.ts",
    "src/routes/**/*",
    "src/middleware/**/*",
    "src/config/**/*",
    "src/types/**/*",
    "src/lib/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/App.tsx", "src/index.tsx", "src/pages/**/*", "src/contexts/**/*"]
} 